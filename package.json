{
    "name": "rust-toolchain",
    "version": "1.0.7",
    "private": false,
    "description": "Install the Rust toolchain",
    "main": "lib/main.js",
    "directories": {
        "lib": "lib",
        "test": "tests"
    },
    "scripts": {
        "clean": "rm -rf ./dist/*",
        "build": "npm run clean && ncc build src/main.ts --minify",
        "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
        "lint": "tsc --noEmit && eslint 'src/**/*.ts' 'tests/**/*.ts'",
        "watch": "rm -rf ./dist/* && ncc build src/main.ts --watch",
        "test": "jest -c jest.config.json",
        "pretest": "git config core.hooksPath .githooks"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/placintaalexandru/toolchain.git"
    },
    "keywords": [
        "actions",
        "rust",
        "rustup",
        "toolchain"
    ],
    "author": "placintaalexandru",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/placintaalexandru/toolchain/issues"
    },
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/exec": "^1.0.4",
        "@actions/io": "^1.0.2",
        "@actions/tool-cache": "^2.0.2",
        "action-input-parser": "1.2.38",
        "commander": "13.1.0",
        "semver": "^7.7.2",
        "stream": "^0.0.3",
        "toml": "^3.0.0"
    },
    "devDependencies": {
        "@fast-check/jest": "^2.1.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.0.8",
        "@types/semver": "^7.7.0",
        "@typescript-eslint/eslint-plugin": "^8.35.0",
        "@typescript-eslint/parser": "^8.35.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "jest": "^29.7.0",
        "jest-circus": "^29.7.0",
        "npm-check-updates": "^17.1.18",
        "prettier": "^3.6.2",
        "temp-write": "^6.0.0",
        "ts-jest": "^29.4.0",
        "typescript": "5.8.3"
    }
}
